@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CDN -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: #f3f6fb;
        }
        .login-card {
            border-radius: 1rem;
            padding: 2rem;
        }
        .form-control {
            border-radius: .5rem;
        }
        .btn-primary {
            border-radius: .5rem;
        }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5">
            <div class="card shadow login-card">
                <h3 class="text-center fw-bold mb-4">Iniciar Sesión</h3>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form method="post" asp-action="Login" asp-controller="Auth">
                    <div class="mb-3">
                        <label class="form-label">Usuario</label>
                        <input type="text" name="usuario" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                </form>

                <p class="text-center mt-4" style="font-size: .9rem;">
                    Usuario de prueba: <strong>admin</strong> — Contraseña: <strong>123</strong>
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
