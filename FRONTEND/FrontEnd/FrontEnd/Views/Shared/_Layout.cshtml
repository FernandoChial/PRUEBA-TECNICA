@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - FrontEnd</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    @if (HttpContextAccessor.HttpContext.Session.GetString("Usuario") != null)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Sistema de Ventas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
@*                         <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Inicio</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" href="/Productos/Productos">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Ventas/Registrar">Ventas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/HistorialVentas/Historial">Historial de Ventas</a>
                        </li>




                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="nav-link">Hola @HttpContextAccessor.HttpContext.Session.GetString("Usuario")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Logout">Salir</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
